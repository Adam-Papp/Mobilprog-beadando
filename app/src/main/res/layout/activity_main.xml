                    android:textColor="@color/WhiteText"
                    android:textSize="32sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="#000000"
                android:orientation="horizontal"
                android:weightSum="4">

                <Button
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="2sp"
                    android:layout_weight="2"
                    android:background="@drawable/background_btn1"
                    android:backgroundTint="#7E7777"
                    android:onClick="btn_0"
                    android:text="0"
                    android:textColor="@color/WhiteText"
                    android:textSize="32sp" />

                <Button
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="2sp"
                    android:layout_weight="1"
                    android:background="@drawable/background_btn1"
                    android:backgroundTint="#7E7777"
                    android:onClick="btn_pont"
                    android:text="."
                    android:textColor="@color/WhiteText"
                    android:textSize="32sp" />

                <Button
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="2sp"
                    android:layout_weight="1"
                    android:background="@drawable/background_btn2"
                    android:backgroundTint="#534D4D"
                    android:onClick="btn_osztas"
                    android:text="÷"
                    android:textColor="@color/WhiteText"
                    android:textSize="32sp" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#000000"
            android:orientation="vertical"
            android:weightSum="1">

            <Button
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_margin="2sp"
                android:layout_weight="1"
                android:background="@drawable/background_btn2"
                android:backgroundTint="#804F4F"
                android:onClick="btn_egyenlo"
                android:text="="
