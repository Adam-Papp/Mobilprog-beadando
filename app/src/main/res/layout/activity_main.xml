<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:orientation="vertical"
    android:weightSum="9"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/szamTextView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="5sp"
        android:layout_weight="2"
        android:background="#ACACAC"
        android:gravity="center|end"
        android:hint="0"
        android:maxLength="14"
        android:padding="10dp"
        android:textColor="#000000"
        android:textColorHint="#000000"
        android:textSize="50sp" />

    <TextView
        android:id="@+id/muveletTextView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="5sp"
        android:layout_weight="1"
        android:background="#ACACAC"
        android:gravity="center|end"
        android:padding="10dp"
        android:textColor="#000000"
        android:textColorHint="#000000"
        android:textSize="32sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#000000"
        android:backgroundTint="#000000"
        android:orientation="horizontal"
        android:weightSum="5">

        <Button
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="2sp"
            android:layout_weight="1"
            android:background="@drawable/background_btn1"
            android:backgroundTint="#534D4D"
            android:onClick="btn_log"
            android:text="log"
            android:textAllCaps="false"
            android:textColor="@color/WhiteText"
            android:textSize="30sp" />

        <Button
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="2sp"
            android:layout_weight="1"
            android:background="@drawable/background_btn1"
            android:backgroundTint="#534D4D"
            android:onClick="btn_ln"
            android:text="ln"
            android:textAllCaps="false"
            android:textColor="@color/WhiteText"
            android:textSize="30sp" />

        <Button
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="2sp"
            android:layout_weight="1"
            android:background="@drawable/background_btn1"
            android:backgroundTint="#534D4D"
            android:onClick="btn_negyzet"
            android:text="xⁿ"
            android:textAllCaps="false"
            android:textColor="@color/WhiteText"
            android:textSize="30sp" />

        <Button
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="2sp"
            android:layout_weight="1"
            android:background="@drawable/background_btn1"
            android:backgroundTint="#534D4D"
            android:onClick="btn_gyok"
            android:text="√"
            android:textAllCaps="false"
            android:textColor="@color/WhiteText"
            android:textSize="30sp" />

        <Button
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="2sp"
            android:layout_weight="1"
            android:background="@drawable/background_btn1"
            android:backgroundTint="#534D4D"
            android:onClick="btn_faktorialis"
            android:text="!"
            android:textAllCaps="false"
            android:textColor="@color/WhiteText"
            android:textSize="30sp" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"

        android:background="#000000"
        android:backgroundTint="#000000"
        android:gravity="center"
        android:orientation="horizontal"
        android:weightSum="5">

        <Button
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="2sp"
            android:layout_weight="2"
            android:background="@drawable/background_btn1"
            android:backgroundTint="#534D4D"
            android:onClick="btn_sin"
            android:text="sin"
            android:textAllCaps="false"
            android:textColor="@color/WhiteText"
            android:textSize="30sp" />

